<h1>Home</h1>

<table>
  <% @posts.each do |post| %>
    <tbody>
      <tr>
        <%# <td><%= post.user.name %></td> %>
      </tr>
      <tr>
        <td><%= post.content %></td>
      </tr>
      <tr>
        <td><%= image_tag(post.image.url) %></td>
      </tr>
    </tbody>
    <tfooter>
      <tr>
        <td>
          <%= link_to 'Show', post %>
          <% if post.user.id == current_user.id %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    </tfooter>

  <% end %>
</table>
<%= link_to '投稿する', new_post_path %>